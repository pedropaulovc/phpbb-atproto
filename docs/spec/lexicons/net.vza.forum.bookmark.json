{
  "lexicon": 1,
  "id": "net.vza.forum.bookmark",
  "defs": {
    "main": {
      "type": "record",
      "description": "A bookmarked topic. Stored on user's PDS.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["post", "createdAt"],
        "properties": {
          "post": {
            "type": "ref",
            "ref": "#strongRef",
            "description": "Reference to the first post of the bookmarked topic."
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    },
    "strongRef": {
      "type": "object",
      "required": ["uri", "cid"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "cid": {
          "type": "string",
          "format": "cid"
        }
      }
    }
  }
}
